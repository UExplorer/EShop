@model EShop.Areas.Login.Models.RegisterModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Login/Views/Shared/_LoginLayout.cshtml";
}


<div class="container col-3 justify-content-center">
    @using (Html.BeginForm("CreateUser", "Register", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(r => r.Name, new {@class="col-form-label"})
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Email, new { @class = "col-form-label" })
            @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Password, new { @class = "col-form-label" })
            @Html.PasswordFor(r => r.Password, new {@class = "form-control"})
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.PasswordConfirm, new { @class = "col-form-label" })
            @Html.PasswordFor(r => r.PasswordConfirm, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PasswordConfirm)
        </div>
        <div class="form-group">
        @Html.LabelFor(r => r.PhoneNumber, new { @class = "col-form-label" })
        @Html.TextBoxFor(r => r.PhoneNumber, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.PhoneNumber)
        </div>

        <div class="">
        </div>

        <input type="submit" value="Register" class="btn-primary"/>
    }
</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
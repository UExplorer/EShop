@using EShop.Domain.Entities
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" integrity="sha384-rwoIResjU2yc3z8GV/NPeZWAv56rSmLldC3R/AZzGRnGxQQKnKkoFVhFQhNUwEyJ" crossorigin="anonymous">
    
    <title>Админка</title>
    <style>
        body {
            padding-bottom: 120px;
        }
    </style>
</head>
<body>
<nav class="navbar navbar-toggleable-md navbar-light bg-faded">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <a class="offset-1 navbar-brand" href="~/Goods/List">EShop</a>
    <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
            <li class="nav-item active">
                @Html.ActionLink("Пользователи", "Index", "AdminUsers", new { Area = "Administration" }, new { @class= "nav-link offset-5" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Заказы", "Index", "AdminOrder", new { Area = "Administration" }, new { @class = "nav-link offset-7" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Товары", "Index", "AdminGoods", new { Area = "Administration" }, new { @class = "nav-link offset-8" })
            </li>
            <li class="nav-item">
                @Html.ActionLink("Отзывы", "Index", "AdminReview", new { Area = "Administration" }, new { @class = "nav-link offset-9" })
            </li>
        </ul>
        @RenderPage("~/Views/Shared/_PartialLogin.cshtml")
    </div>
</nav>
<div class="row">
    @RenderBody()
</div>
<footer class="fixed-bottom bg-faded">
    <div class="container">
        <div class="row">
            <div class="col l4 offset-l2 s12">
                <ul>
                    <li>@Html.ActionLink("Обратная связь", "Index", "Feedback")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-copyright">
        <div class="container">
            © @DateTime.Now.Year Nikita Samoilenko NNN
        </div>
    </div>
</footer>
<script src="https://code.jquery.com/jquery-3.1.1.slim.min.js" integrity="sha384-A7FZj7v+d/sdmMqp/nOQwliLvUsJfDHW+k9Omg/a/EheAdgtzNs3hpfag6Ed950n" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js" integrity="sha384-DztdAPBWPRXSA/3eYEEUWrWCy7G5KFbe8fFjk5JAIxUYHKkDx6Qin1DkWx51bBrb" crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" integrity="sha384-vBWWzlZJ8ea9aCX4pEW3rVHjgjt7zpkNpZk+02D9phzyeVkE+jo0ieGizqPLForn" crossorigin="anonymous"></script>
</body>
</html>
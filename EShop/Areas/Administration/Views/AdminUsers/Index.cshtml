@using EShop.Areas.Administration.Models
@using EShop.Domain.Identity
@model IEnumerable<EShop.Areas.Administration.Models.AdminUsersModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Administration/Views/Shared/_AdminLayout.cshtml";
}

<div class="container mt-5">
    <table class="table table-striped table-bordered">
        <thead>
        <tr>
            <th>@Html.DisplayNameFor(u => u.First().UserName)</th>
            <th>@Html.DisplayNameFor(u => u.First().Email)</th>
            <th>@Html.DisplayNameFor(u => u.First().Roles)</th>
            <th>@Html.DisplayNameFor(u => u.First().PhoneNumber)</th>
            <th>@Html.DisplayNameFor(u => u.First().IsEnabled)</th>
        </tr>
        </thead>
        <tbody>
            @foreach (AdminUsersModel user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(u => user.UserName)</td>
                    <td>@Html.DisplayFor(u => user.Email)</td>
                    <td>@foreach(var role in user.Roles)
                        {
                            @role;
                        }
                    </td>
                    <td>@Html.DisplayFor(u => user.PhoneNumber)</td>
                    <td>@(user.IsEnabled ? "Yes" : "No")</td>
                    <td>@Html.ActionLink("Disable/Enable", "Disable", "AdminUsers", new { id = user.Id }, new {@class= "btn btn-outline-primary" })</td>
                </tr>
            }
        </tbody>
    </table>
</div>

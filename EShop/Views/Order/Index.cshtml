@model EShop.Models.CreateOrderModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <h2>Ваш заказ : @Html.DisplayFor(m=>m.GoodsList)</h2>


    <div class="container justify-content-center col-4" style="margin-top: 30px;">
        Введите информацию о доставке

    @using (Html.BeginForm("CreateOrder", "Order", FormMethod.Post))
    {
        <div class="form-group">
            @Html.LabelFor(r => r.Country, new { @class = "col-form-label" })
            @Html.TextBoxFor(r => r.Country, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Country)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.City, new { @class = "col-form-label" })
            @Html.TextBoxFor(r => r.City, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.City)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Address, new { @class = "col-form-label" })
            @Html.TextBoxFor(r => r.Address, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Address)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.ZIP, new { @class = "col-form-label" })
            @Html.TextBoxFor(r => r.ZIP, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ZIP)
        </div>
        <div class="form-group">
            @Html.LabelFor(r => r.Reciver, new { @class = "col-form-label" })
            @Html.TextBoxFor(r => r.Reciver, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Reciver)
        </div>

        <input type="submit" value="Оформить заказ" class="btn-primary" />
    }
    </div>
</div>
